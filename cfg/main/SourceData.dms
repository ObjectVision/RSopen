container SourceData: using = "Classifications;Classifications/Vastgoed;Classifications/Actor;Classifications/Time;Units;Geography"
, Descr = "Brondata die het model nodig heeft voor de verschillende berekeningen/analyses. De Data worden ingelezen vanuit de SourceDataDir. De bronnen zijn divers."
{
	#include<Actoren.dms>
	#include<Bodem.dms>
	#include<Diversen.dms>
	#include<Energie.dms>
	#include<Grondgebruik.dms>
	// #include<Infrastructuur.dms>
	#include<Landschap.dms>
	#include<Landbouw.dms>
	#include<Omgevingsrecht.dms>
	#include<Plancapaciteit.dms>
	
	container Restricties := 
		for_each_ndva(
			Actor/Sector_x_ResHardheidK/Label
			, AdminDomain
			, bool
			,'%RSo_DataDir%/Beleid/Restricties/'+ModelParameters/Restricties_filedate+'/Restricties_'+Actor/Sector_x_ResHardheidK/name+'.tif'
		), Descr = "Inlezen van restrictiekaarten per sector. De kaarten zijn opgeslagen in de map Beleid/Restricties met een datum die is opgegeven in de modelparameters."
	{
		container Wonen
		{
			attribute<bool> Geen (AdminDomain) := NOT(OR(ZeerHard, Hard, Middel, Zacht)); //nodig voor Indicatoren/Grondgebruik/Verandering/Per_Sector_x_ResHardheidK
		}
		
		container Werken
		{
			attribute<bool> Geen (AdminDomain) := NOT(OR(ZeerHard, Hard, Middel, Zacht));
		}
		
		container Verblijfsrecreatie
		{
			attribute<bool> Geen (AdminDomain) := NOT(OR(ZeerHard, Hard, Middel, Zacht));
		}
		
		container Landbouw
		{
			attribute<bool> Zacht    (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Middel   (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Hard     (AdminDomain) := const(false, AdminDomain);
			attribute<bool> ZeerHard (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Geen     (AdminDomain) := NOT(OR(ZeerHard, Hard, Middel, Zacht));
		}
	}
	
	container Stimuli := 
		for_each_ndva(
			Actor/Sector_x_StimHardheidK/Label
			, AdminDomain
			, bool
			,'%RSo_DataDir%/Beleid/Stimuli/'+ModelParameters/Stimuli_filedate+'/Stimuli_'+Actor/Sector_x_StimHardheidK/name+'.tif'
		), Descr = "Inlezen van stimulikaarten per sector. De kaarten zijn opgeslagen in de map Beleid/Stimuli met een datum die is opgegeven in de modelparameters."
	{
		container Landbouw
		{
			attribute<bool> Zacht    (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Middel   (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Hard     (AdminDomain) := const(false, AdminDomain);
			attribute<bool> ZeerHard (AdminDomain) := const(false, AdminDomain);
			attribute<bool> Geen     (AdminDomain) := NOT(OR(ZeerHard, Hard, Middel, Zacht));
		}
	}
	
	#include<Vastgoed.dms>
	#include<Water.dms>
	#include<RegioIndelingen.dms>
}