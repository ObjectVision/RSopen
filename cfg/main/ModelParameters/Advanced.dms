container Advanced
{
	parameter<String>    AdminDomain_ref               := '25m', Descr = "Ruimtelijke resolutie waarop de allocatieresultaten worden geadminstreerd";
	parameter<String>    AllocDomain_ref               := '100m', Descr = "Ruimtelijke resolutie waarop de allocatie plaatsvindt (keuze-eenheid)";

	parameter<String>    Landuse_aggregation_method    := 'Modus', Descr = "Wijze waarop waargenomen Grondgebruik ruintelijk wordt geaggregeerd: Discreate allocation (i.e. met behoud van randtotalen), of modus"; //opties: Modus, Allocation

	// GRONDGEBRUIK 
	parameter<meter2>                       MinimumPandFootprint             := 20[meter2], Descr = "Om dominantie te bepalen in de landgebruikskaart moet een ondergrens voor werken worden gehanteerd. Hiervoor wordt de pandfootprint gebruikt.";
	parameter<Woning>                       MinimumWoningAmount              := 5[Woning], Descr = "Om dominantie te bepalen in de landgebruikskaart moet een ondergrens voor wonen worden gehanteerd. Hiervoor wordt het aantal woningen gebruikt.";
	parameter<Verblijfsobject>              MinimumVerblijfsobjectAmount     := 1[Verblijfsobject], Descr = "Om dominantie te bepalen in de landgebruikskaart moet een ondergrens voor verblijfsrecreatie worden gehanteerd. Hiervoor wordt het aantal verblijfsobjecten gebruikt.";
	parameter<UInt32>                       MinimumGroupSize                 := 3, Descr = "Om de landgebruikskaart aan te laten sluiten bij de BBG, wordt een vergelijkbare methodiek gehanteerd waarbij 25m cellen worden gegroepeerd. Pas als deze drempel wordt bereikt wordt een cel overwogen om in de landgebruikskaart te komen.";
	parameter<UInt8>                        MinimumCountNieuwNatuur          := 10b, Descr = "In de aggregatie van NVK kaarten het aantal 25m cellen in een 100m die nieuwe natuur zijn om dit in het zichtjaar op te nemen.";
}
